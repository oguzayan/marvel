<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marvel_graph"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.ayanoguz.marvel.ui.characterList.CharacterListFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_character_list">

        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.ayanoguz.marvel.ui.characterDetail.CharacterDetailFragment"
        android:label="Character Detail"
        tools:layout="@layout/fragment_character_list">

        <argument
            android:name="characterItem"
            app:argType="com.ayanoguz.marvel.data.interactor.characterList.CharacterUIModel" />

    </fragment>


</navigation>
